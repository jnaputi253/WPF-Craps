<Window Name="Window"
        x:Class="WpfDrawing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Canvas>
            <Line Name="Line"
                  X1="50" Y1="50"
                  X2="100" Y2="200"
                  Stroke="Black"
                  StrokeThickness="4"/>
            <Button Content="Move Line" Canvas.Left="404" Canvas.Top="90" Width="75" Click="ButtonBase_OnClick"/>
        </Canvas>
    </Grid>
</Window>
