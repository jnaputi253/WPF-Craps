<Window x:Class="GameOfCraps.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Menu Name="Menu" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="517">
            <MenuItem Header="Game" Height="30" Width="50">
                <MenuItem Name="StartButton" Header="Start" Click="StartButton_OnClick"/>
                <MenuItem Name="RestartButton" Header="Restart" Click="RestartButton_OnClick"/>
                <MenuItem Name="ExitButton" Header="Exit" Click="ExitButton_OnClick"/>
            </MenuItem>
        </Menu>

    </Grid>
</Window>
